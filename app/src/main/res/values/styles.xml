<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#0097c2</item>
        <item name="colorPrimaryDark">#0097c2</item>
        <item name="colorAccent">#0097c2</item>
        <item name="android:statusBarColor">@android:color/holo_blue_dark</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Color1SwitchStyle">
        <item name="colorControlActivated">#0097c2</item>
        <!-- Inactive thumb color switch关闭时的拇指按钮的颜色 -->
        <item name="colorSwitchThumbNormal">#0097c2</item>
        <!-- Inactive track color(30% transparency) switch关闭时的轨迹的颜色  30%这个颜色 -->
        <item name="android:colorForeground">#0097c2</item>

    </style>
    <style name="mystrle" parent="AppTheme" />

    <style name="setting_item_text">
         <item name="android:textSize">12pt</item>
         <item name="android:layout_width">wrap_content</item>
         <item name="android:layout_height">wrap_content</item>
         <item name="android:layout_weight">1</item>
         <item name="android:paddingLeft">25pt</item>
    </style>
    <style name="setting_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingBottom">10pt</item>
        <item name="android:paddingTop">10pt</item>
        <item name="android:paddingLeft">5pt</item>
        <item name="android:paddingRight">5pt</item>
    </style>
</resources>
